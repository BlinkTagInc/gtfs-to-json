{
  "name": "gtfs-to-json",
  "version": "0.1.0",
  "private": false,
  "description": "Generate JSON of transit route data from a GTFS file",
  "keywords": [
    "transit",
    "gtfs",
    "transportation"
  ],
  "license": "MIT",
  "author": "Brendan Nee <brendan@blinktag.com>",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "gtfs-to-json": "dist/bin/gtfs-to-json.js"
  },
  "scripts": {
    "build": "tsup",
    "prepare": "husky"
  },
  "dependencies": {
    "cli-table": "^0.3.11",
    "gtfs": "^4.15.15",
    "lodash-es": "^4.17.21",
    "pretty-error": "^4.0.0",
    "sanitize-filename": "^1.6.3",
    "timer-machine": "^1.1.0",
    "yargs": "^17.7.2",
    "yoctocolors": "^2.1.1"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.5",
    "@types/timer-machine": "^1.1.3",
    "@types/yargs": "^17.0.33",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md"
      }
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": "prettier --write",
    "*.json": "prettier --write"
  }
}
